#include <stdio.h>
#include <stdlib.h>


char* getLine() {
    char *str = NULL;  
    int len = 0;     
    char ch;

    printf("Enter a line of text: ");
    while ((ch = getchar()) != '\n' && ch != EOF) {
       
        str = (char*)realloc(str, (len + 1) * sizeof(char));
        str[len] = ch;
        len++;
    }


    str = (char*)realloc(str, (len + 1) * sizeof(char));
    str[len] = '\0';

    return str; 
}

int main() {
    char *line = getLine(); 
    printf("\nYou entered: %s\n", line);

    free(line);  
    return 0;
}
