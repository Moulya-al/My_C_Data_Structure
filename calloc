// Allocate memory for an integer
#include <stdio.h>
#include <stdlib.h>

int main() {
    int *p;
  
    p = (int*) calloc(1, sizeof(int));

    if (p == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }

    printf("Value of the integer: %d\n", *p);
  
    *p = 42;
    printf("New value of the integer: %d\n", *p);

    free(p);

    return 0;
}
